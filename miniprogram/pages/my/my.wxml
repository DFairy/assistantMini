<view class='container'>
  <view class='my-title'>
    <view class='shadow'></view>
    <image src='../../img/origin.png'  mode='aspectFill'></image>
  </view>
  <view class='avatarInfo'>
    <open-data class='avatar' type='userAvatarUrl'></open-data>
    <open-data class='name' type='userNickName'></open-data>
  </view>
  <view class='content'>
    <view class='list' catchtap='myCollect'>
      <view class='listInfo'><image src='../../img/loved.png' class='logo'></image><text>我的收藏</text></view>
      <view class='arrow-right'></view>
    </view>
  </view>
  <view class='content'>
    <view class='list' catchtap='getsysteminfo'>
      <view class='listInfo'><image src='../../img/syst.png' class='logo'></image><text>系统信息</text></view>
      <view class='arrow-right'></view>
    </view>
    <view class='list' catchtap='about'>
      <view class='listInfo'><image src='../../img/about.png' class='logo'></image><text>关于项目</text></view>
      <view class='arrow-right'></view>
    </view>
  </view>
  <view class='content'>
    <!-- <view class='title'>清除数据</view> -->
    <view class='list' catchtap='clearStorage'>
      <view class='listInfo'><image src='../../img/clear.png' class='logo'></image><text>清除本地缓存</text></view>
      <view class='arrow-right'></view>
    </view>
    <button plain='true' open-type='share'  class='list list-button'>
      <view class='listInfo'><image src='../../img/recommend.png' class='logo'></image><text>推荐给好友</text></view>
      <view class='arrow-right'></view>
    </button>
  </view>
</view>
