.chooseBcg {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  z-index: 100;
  width: 100%;
  font-size: 24rpx;
  color: #333;
}
.chooseBcg .top {
  box-sizing: border-box;
  padding: 20rpx 20rpx 50rpx;
  background: rgba(255, 255, 255, 0);
  color: #fff;
  
}
.chooseBcg .bcgs {
  display: flex;
  align-items: center;
  /* justify-content: center; */
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.chooseBcg .border {
  padding: 6rpx;
  margin-right: 14rpx;
  border: 1rpx solid rgba(255, 255, 255, 0);
  transition: .1s ease;
}
.chooseBcg .border:last-child {
  margin-right: 0;
}
.chooseBcg .border.active {
  border: 1rpx solid #40a7e7;
  transition: .1s ease;
}
.chooseBcg .bcgs image {
  width: 200rpx;
  height: 250rpx;
}
.add{
  width: 200rpx;
  height: 250rpx;
  border: 2rpx dashed #ccc;
  color: #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 180rpx;
}


