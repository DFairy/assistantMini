/* miniprogram/pages/addImg/addImg.wxss */

.container{
  width: 100%;
  height:100%;
  display:flex;
  flex-direction:column;
  min-height:100vh;
  color:#fff;
  font-size:30rpx;
  background: #1D73C4;
}
.bg{
  position:fixed;
  z-index:2;
  height:100%;
  width:100%;
  top:0;
  right:0;
  bottom:0;
  left:0;
}
.search{
  position: fixed;
  width: 100%;
  height: 100rpx;
  z-index: 3;
  top: 0;
  left: 0;
  /* background: rgba(255,255,255,0.3); */
}
.search image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 14rpx;
}
.search input{
  flex: 1;
}
.placeholderClass {
  color: #fff;
}
.wrapper{
  display: flex;
  justify-content:flex-start;
  align-items: center;
  font-size: 28rpx;
  height: 60rpx;
  margin: 15rpx 50rpx;
  padding: 0 15rpx;
  border-bottom:1rpx solid #fff; 
}
.content{
  width: 100%;
  position: relative;
  z-index: 3;
  flex: 2;
  transition: 0.3s ease;
  margin-top: 60px;
  overflow-x: hidden;
}
.avatarInfo{
  /* width: 100%; */
  display:flex;
  align-items:center;
  padding:0 50rpx;
}
.avatarInfo .avatar{
  display:block;
  overflow:hidden;
  width:60rpx;
  height:60rpx;
  border-radius:50%;
}
.avatarInfo .name{
  padding:0 20rpx;
  font-size:30rpx;
}
.info{
  padding:10rpx 0 50rpx
}
.city{
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  padding: 0 50rpx;
  font-size: 60rpx;
}
.city .name{
  display: flex;
  align-items: center;
}
.city .icon,.city .down{
  width: 30rpx;
  height: 30rpx;
}
.city .name .val {
  max-width: 5em;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  margin: 0 15rpx;
}
.city .time{
  font-size: 24rpx;
}
.message{
  font-size:22rpx;
  color:#fff;
  padding:30rpx 50rpx 0;
  box-sizing:border-box;
}
.temp{
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.num{
  font-weight: 300;
  height:360rpx;
  font-size:200rpx;
}
.weather{
  font-size: 24rpx;
  margin: 20rpx 0;
}
.guide,.hourly{
  width: 100%;
  background: rgba(0,0,0,0.6);
  font-size: 24rpx;
}
.guide .title,.hourly .title{
  text-align: center;
  border-bottom: 1rpx solid rgba(255,255,255,0.2);
  height: 60rpx;
  line-height: 60rpx;
}
.guide-content{
  display:flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:flex-start;
  padding-top:20rpx;
  margin-bottom:20rpx;
  overflow-x:scroll;
}
.guide-content .item{
  width:170rpx;
  text-align: center;
  font-size: 24rpx;
  flex-shrink: 0;
}

.guide image {
  width: 44rpx;
}
.guide .i {
  padding-bottom:10rpx;
}
.guide .i.weather,
.hour .weather {
  display: flex;
  justify-content: center;
  align-items: center;
}
.guide .i image,
.hour .weather image {
  width: 40rpx;
  margin-left: 4rpx;
}
.details{
  width: 100%;
  background: rgba(0,0,0,0.6);
  font-size: 24rpx;
  display:flex;
  align-items:center;
  flex-wrap:wrap;
  margin: 20rpx 0;
}
.detail{
  padding:10rpx 0;
  height:100rpx;
  width:25%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border-right:1rpx solid rgba(250, 250, 250, 0.2);
border-bottom:1rpx solid rgba(250, 250, 250, 0.2);
box-sizing:border-box;

}

.hourly {
  margin-bottom: 20rpx;
  background: rgba(0, 0, 0, .6);
  font-size: 24rpx; 
}
.hourly .hours {
  padding: 20rpx 10rpx 0;
  width: 100%;
}
.hourly .hours .time {
  font-size: 22rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.hour {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background: rgb(107, 102, 102);
  font-size: 24rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}
.hourly swiper-item {
  box-sizing: border-box;
  padding: 0 10rpx;
  background: rgba(0, 0, 0, 0);
}
.details .detail,
.hour .detail {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0;
  height: 100rpx;
  width: 25%;
  border-right: 1rpx solid rgba(250, 250, 250, 0.2);
  border-bottom: 1rpx solid rgba(250, 250, 250, 0.2);
  box-sizing: border-box;
}
.details .detail:nth-child(4n),
.hour .detail:nth-child(4n) {
  border-right: none;
}
.details .detail:nth-child(n+9),
.hour .detail:nth-child(n+9) {
  border-bottom: none;
}
.livingIndex {
  background: rgba(0, 0, 0, .6);
  margin-bottom: 20rpx;
}
.livingIndex .item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid rgba(250, 250, 250, .2);
  padding: 20rpx 0;
  margin: 0 30rpx;
}
.livingIndex .item:last-child {
  border-bottom: none;
}
.livingIndex .item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;
}
.livingIndex .item .value {
  margin-top: 10rpx;
  font-size: 24rpx;
}
.livingIndex .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}
.menus .menu{
  height: 38px;
  width: 38px;
  border-radius: 50%;
  position: fixed;
  z-index: 100;
  bottom: 120rpx;
  right: 70rpx;
  opacity: 0;
}
.menus .main{
  opacity: 1;
  z-index: 999;
}
/* 打开设置页面 button */
.openSettingButton {
  position: fixed;
  z-index: 102;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.openSettingButton image {
  position: relative;
  width: 128rpx;
  height: 128rpx;
  z-index: 2;
}
.openSettingButton button {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
  z-index: 3;
}
