page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  font-size: 24rpx;
}
.scroll-left{
  width: 25%;
  height: 100%;
}
.scroll-right{

  width:75%;
  height: 100%;
  background: #fff;

}
.list{
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #ddd;
  position: relative;
}
.goods{
  padding:0 30rpx;
}
.goods .title{
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  position: relative;
}
.goods .goods-list{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap:wrap;
  width: 100%;
  position: relative;
}
.goods-list .goods-list-detail{
  flex-basis: 40%;
  text-align: center;
  border: 1rpx solid #000;
  padding: 8rpx 14rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 2%;
}
.active{
  background: #fff;
}
.title-icon{
    display: inline-block;
    vertical-align: bottom;
    width: 70rpx;
    height: 47rpx;
    background: url(https://www.imooc.com/static/img/index/icon.png) no-repeat;
    background-size: 100%; 
}
.icon1{
    background-position: center 0;
    margin-right: 13rpx;
}
.icon2{
    background-position: center -42rpx;
    margin-left: 13rpx;
}
.menu{
  height: 38px;
  width: 38px;
  border-radius: 50%;
  position: fixed;
  z-index: 100;
  bottom: 60rpx;
  right: 70rpx;
}